<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Post Page</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h4>Create a New Post</h4>
                <form action="/post" method="POST">
                    <div class="mb-3">
                        <label for="category" class="form-label">Select Category</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="" disabled selected>Choose...</option>
                            <option value="Circular">Circular</option>
                            <option value="Department Happening">Department Happening</option>
                            <option value="Technical Events">Technical Events</option>
                            <option value="Extra Circular">Extra Circular</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post</button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4>View Posts</h4>
                <div id="posts">
                    <% for (const category in posts) { %>
                        <h5 class="mt-3"><%= category %></h5>
                        <ul class="list-group mb-3">
                            <% if (posts[category].length > 0) { %>
                                <% posts[category].forEach((message) => { %>
                                    <li class="list-group-item"><%= message %></li>
                                <% }); %>
                            <% } else { %>
                                <li class="list-group-item text-muted">No posts yet</li>
                            <% } %>
                        </ul>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
