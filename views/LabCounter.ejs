    <script>
        var allocatedTimeSlots = {};

        // Lab allocation function
        function allocateLab(counterId, timeSlotId) {
            var counter = document.getElementById(counterId);
            var timeSlot = document.getElementById(timeSlotId);
            var alertMessage = document.getElementById("alert" + counterId.charAt(counterId.length - 1));
            var currentCount = parseInt(counter.innerHTML.split('/')[0]);
            var selectedTimeSlot = timeSlot.value;

            if (selectedTimeSlot) {
                // Check if the time slot is already allocated in another lab
                if (allocatedTimeSlots[selectedTimeSlot]) {
                    alertMessage.innerHTML = "<div class='alert alert-danger'>This time slot is already booked in another lab.</div>";
                } else {
                    // Allocate the lab if not already full
                    if (currentCount < 32) {
                        counter.innerHTML = (currentCount + 1) + "/32";
                        allocatedTimeSlots[selectedTimeSlot] = true; // Mark the time slot as allocated
                        alertMessage.innerHTML = "<div class='alert alert-success'>Lab slot allocated for " + selectedTimeSlot + "!</div>";
                    } else {
                        alertMessage.innerHTML = "<div class='alert alert-danger'>Lab is fully allocated.</div>";
                    }
                }
            } else {
                alertMessage.innerHTML = "<div class='alert alert-warning'>Please select a time slot.</div>";
            }
        }

        // Lab withdrawal function
        function withdrawLab(counterId) {
            var counter = document.getElementById(counterId);
            var alertMessage = document.getElementById("alert" + counterId.charAt(counterId.length - 1));
            var currentCount = parseInt(counter.innerHTML.split('/')[0]);
            var timeSlotId = "timeSlot" + counterId.charAt(counterId.length - 1);
            var timeSlot = document.getElementById(timeSlotId);
            var selectedTimeSlot = timeSlot.value;

            if (currentCount > 0 && selectedTimeSlot) {
                counter.innerHTML = (currentCount - 1) + "/32";
                delete allocatedTimeSlots[selectedTimeSlot]; // Mark the time slot as available
                alertMessage.innerHTML = "<div class='alert alert-warning'>Lab slot withdrawn.</div>";
            } else {
                alertMessage.innerHTML = "<div class='alert alert-danger'>No allocations to withdraw or time slot not selected.</div>";
            }
        }
