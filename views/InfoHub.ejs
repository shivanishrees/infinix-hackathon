<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InfoHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body,
        html {
            margin: 0;
            height: 100%;
        }

        .sidebar {
            height: 100vh;
            /* Full viewport height */
        }
    </style>
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark sidebar" style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32">
                    <use xlink:href="#bootstrap"></use>
                </svg>
                <span class="fs-4">TCE CONNECTORS</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/InfoHub" class="nav-link active" aria-current="page">
                        <svg class="bi me-2" width="16" height="16">
                            <use xlink:href="#home"></use>
                        </svg>
                        Circular
                    </a>
                </li>
                <li>
                    <a href="/InfoHub" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16">
                            <use xlink:href="#speedometer2"></use>
                        </svg>
                        Department Happening
                    </a>
                </li>
                <li>
                    <a href="/InfoHub" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16">
                            <use xlink:href="#table"></use>
                        </svg>
                        Technical Events
                    </a>
                </li>
                <li>
                    <a href="/InfoHub" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16">
                            <use xlink:href="#grid"></use>
                        </svg>
                        Extracurricular activities
                    </a>
                </li>
                <li>
                    <a href="/post" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16">
                            <use xlink:href="#grid"></use>
                        </svg>
                        Create Post
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="container mt-4">
            <h1 class="mb-4">Posts</h1>

            <!-- Loop through the categories and their posts -->
            <% for (const category in posts) { %>
                <div class="mb-4">
                    <h3><%= category %></h3>
                    <ul class="list-group">
                        <% if (posts[category].length > 0) { %>
                            <% posts[category].forEach((message) => { %>
                                <li class="list-group-item"><%= message %></li>
                            <% }); %>
                        <% } else { %>
                            <li class="list-group-item text-muted">No posts yet</li>
                        <% } %>
                    </ul>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OM1D64R+doMAth9p8UENY6cOP5h1J3rdYsmwDpQmEihq35xg09Bdq1n5X3eS9Dfj" crossorigin="anonymous"></script>
</body>
</html>
